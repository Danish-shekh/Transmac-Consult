@* Shared Locomotive Scroll styles for all Home pages *@
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/locomotive-scroll@4.1.4/dist/locomotive-scroll.min.css">
<style>
    /* Locomotive Scroll Base Styles */
    html.has-scroll-smooth {
        overflow: hidden;
    }
    
    html.has-scroll-smooth body {
        overflow: hidden;
    }
    
    /* Smooth scroll container */
    [data-scroll-container] {
        min-height: 100vh;
    }
    
    /* Hide main footer when page has its own scroll container with footer */
    body:has([data-scroll-container]) > footer,
    body:has([data-scroll-container]) #main-footer {
        display: none !important;
    }
    
    /* ===================================
       GLASSY MODERN HERO SECTION
    =================================== */
    .hero-section {
        position: relative;
        padding: 120px 0 80px;
        background: linear-gradient(135deg, 
            rgba(255, 255, 255, 0.95) 0%,
            rgba(245, 245, 247, 0.9) 100%);
        backdrop-filter: blur(20px) saturate(180%);
        -webkit-backdrop-filter: blur(20px) saturate(180%);
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }
    
    /* Enhanced Card Styles for all Home pages */
    .card {
        background: #ffffff;
        border-radius: 20px;
        padding: 32px;
        box-shadow: 
            0 10px 40px rgba(0, 0, 0, 0.08),
            0 4px 12px rgba(0, 0, 0, 0.04),
            inset 0 1px 0 rgba(255, 255, 255, 0.8);
        border: 1px solid rgba(0, 0, 0, 0.06);
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        position: relative;
        overflow: hidden;
    }
    
    .card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #3b82f6, #8b5cf6);
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    }
    
    .card:hover {
        transform: translateY(-8px);
        box-shadow: 
            0 20px 60px rgba(0, 0, 0, 0.15),
            0 8px 24px rgba(0, 0, 0, 0.08),
            inset 0 1px 0 rgba(255, 255, 255, 0.9);
    }
    
    .card:hover::before {
        transform: scaleX(1);
    }
    
    /* Content section styling */
    .content-section {
        padding: 80px 0 0 0;
        position: relative;
    }
    
    .content-section:last-of-type {
        padding-bottom: 40px;
    }
    
    .content-section .container {
        position: relative;
        z-index: 2;
    }
    
    /* Grid layouts with enhanced gaps */
    .grid-2, .grid-3 {
        display: grid;
        gap: 32px;
    }
    
    .grid-2 {
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    }
    
    .grid-3 {
        grid-template-columns: repeat(3, 1fr);
    }
    
    @@media (max-width: 1024px) {
        .grid-3 {
            grid-template-columns: repeat(2, 1fr);
        }
    }
    
    @@media (max-width: 768px) {
        .grid-2, .grid-3 {
            grid-template-columns: 1fr;
        }
    }
    
    .hero-section::before {
        content: '';
        position: absolute;
        inset: 0;
        background: 
            radial-gradient(circle at 20% 30%, rgba(59, 130, 246, 0.08) 0%, transparent 50%),
            radial-gradient(circle at 80% 70%, rgba(168, 85, 247, 0.08) 0%, transparent 50%);
        pointer-events: none;
    }
    
    .hero-section .container {
        position: relative;
        z-index: 2;
    }
    
    .hero-section h1 {
        font-size: 3.5rem;
        font-weight: 800;
        margin: 0 0 1rem;
        color: #1d1d1f;
        letter-spacing: -0.02em;
        line-height: 1.1;
        text-shadow: 0 2px 20px rgba(0, 0, 0, 0.05);
    }
    
    .hero-section p {
        font-size: 1.25rem;
        color: #4a5568;
        font-weight: 500;
        margin: 0;
        letter-spacing: 0.01em;
    }
    
    .content-section h2 {
        text-align: left;
    }
    
    @@media (max-width: 768px) {
        .hero-section {
            padding: 100px 0 60px;
        }
        
        .hero-section h1 {
            font-size: 2.25rem;
        }
        
        .hero-section p {
            font-size: 1.05rem;
        }
    }
    
    /* Locomotive Scroll Animations */
    [data-scroll] {
        opacity: 0;
        transition: opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1),
                    transform 0.8s cubic-bezier(0.16, 1, 0.3, 1),
                    filter 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    }
    
    [data-scroll].is-inview {
        opacity: 1;
    }
    
    /* Fade up animation */
    [data-scroll-animation="fade-up"] {
        transform: translateY(60px);
        filter: blur(4px);
    }
    
    [data-scroll-animation="fade-up"].is-inview {
        transform: translateY(0);
        filter: blur(0);
    }
    
    /* Fade in from left */
    [data-scroll-animation="fade-left"] {
        transform: translateX(-60px);
        filter: blur(4px);
    }
    
    [data-scroll-animation="fade-left"].is-inview {
        transform: translateX(0);
        filter: blur(0);
    }
    
    /* Fade in from right */
    [data-scroll-animation="fade-right"] {
        transform: translateX(60px);
        filter: blur(4px);
    }
    
    [data-scroll-animation="fade-right"].is-inview {
        transform: translateX(0);
        filter: blur(0);
    }
    
    /* Scale up animation */
    [data-scroll-animation="scale-up"] {
        transform: scale(0.85);
        filter: blur(8px);
    }
    
    [data-scroll-animation="scale-up"].is-inview {
        transform: scale(1);
        filter: blur(0);
    }
    
    /* Hero section special treatment */
    .hero-section[data-scroll-section] {
        opacity: 1;
    }
    
    .hero-section h1[data-scroll] {
        opacity: 0;
        transform: translateY(40px);
    }
    
    .hero-section h1[data-scroll].is-inview {
        opacity: 1;
        transform: translateY(0);
        transition: opacity 1s cubic-bezier(0.16, 1, 0.3, 1),
                    transform 1s cubic-bezier(0.16, 1, 0.3, 1);
    }
    
    .hero-section p[data-scroll] {
        opacity: 0;
        transform: translateY(30px);
    }
    
    .hero-section p[data-scroll].is-inview {
        opacity: 1;
        transform: translateY(0);
        transition: opacity 1s cubic-bezier(0.16, 1, 0.3, 1) 0.15s,
                    transform 1s cubic-bezier(0.16, 1, 0.3, 1) 0.15s;
    }
    
    /* Content sections */
    .content-section h2[data-scroll] {
        opacity: 0;
        transform: translateY(40px);
    }
    
    .content-section h2[data-scroll].is-inview {
        opacity: 1;
        transform: translateY(0);
        transition: opacity 0.9s cubic-bezier(0.16, 1, 0.3, 1),
                    transform 0.9s cubic-bezier(0.16, 1, 0.3, 1);
    }
    
    /* Card staggered animations */
    .card[data-scroll] {
        opacity: 0;
        transform: translateY(50px) scale(0.95);
        filter: blur(6px);
    }
    
    .card[data-scroll].is-inview {
        opacity: 1;
        transform: translateY(0) scale(1);
        filter: blur(0);
        transition: opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1),
                    transform 0.8s cubic-bezier(0.16, 1, 0.3, 1),
                    filter 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    }
    
    /* Staggered delays for cards in grids */
    .grid-2 .card[data-scroll]:nth-child(1).is-inview { transition-delay: 0s; }
    .grid-2 .card[data-scroll]:nth-child(2).is-inview { transition-delay: 0.1s; }
    
    .grid-3 .card[data-scroll]:nth-child(1).is-inview { transition-delay: 0s; }
    .grid-3 .card[data-scroll]:nth-child(2).is-inview { transition-delay: 0.08s; }
    .grid-3 .card[data-scroll]:nth-child(3).is-inview { transition-delay: 0.16s; }
    .grid-3 .card[data-scroll]:nth-child(4).is-inview { transition-delay: 0.24s; }
    .grid-3 .card[data-scroll]:nth-child(5).is-inview { transition-delay: 0.32s; }
    .grid-3 .card[data-scroll]:nth-child(6).is-inview { transition-delay: 0.4s; }
    
    /* Footer inside scroll container */
    [data-scroll-container] footer {
        display: block !important;
        visibility: visible !important;
        margin-top: 0;
        position: relative;
    }
    
    /* Leadership page - staggered vertical animation for list items */
    .card ul li {
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.5s ease, transform 0.5s ease;
    }
    
    .card[data-scroll].is-inview ul li {
        opacity: 1;
        transform: translateY(0);
    }
    
    .card[data-scroll].is-inview ul li:nth-child(1) { transition-delay: 0.1s; }
    .card[data-scroll].is-inview ul li:nth-child(2) { transition-delay: 0.2s; }
    .card[data-scroll].is-inview ul li:nth-child(3) { transition-delay: 0.3s; }
    .card[data-scroll].is-inview ul li:nth-child(4) { transition-delay: 0.4s; }
    .card[data-scroll].is-inview ul li:nth-child(5) { transition-delay: 0.5s; }
    .card[data-scroll].is-inview ul li:nth-child(6) { transition-delay: 0.6s; }
    .card[data-scroll].is-inview ul li:nth-child(7) { transition-delay: 0.7s; }
    .card[data-scroll].is-inview ul li:nth-child(8) { transition-delay: 0.8s; }
    
    /* Process Stages Design - Downward Flow */
    .process-stages {
        position: relative;
        padding: 40px 0;
    }
    
    .stage {
        display: flex;
        align-items: flex-start;
        gap: 30px;
        margin-bottom: 50px;
        position: relative;
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.6s ease;
    }
    
    .stage.is-inview {
        opacity: 1;
        transform: translateY(0);
    }
    
    .stage:nth-child(1).is-inview { transition-delay: 0.1s; }
    .stage:nth-child(2).is-inview { transition-delay: 0.2s; }
    .stage:nth-child(3).is-inview { transition-delay: 0.3s; }
    .stage:nth-child(4).is-inview { transition-delay: 0.4s; }
    .stage:nth-child(5).is-inview { transition-delay: 0.5s; }
    .stage:nth-child(6).is-inview { transition-delay: 0.6s; }
    
    .stage::before {
        content: '';
        position: absolute;
        left: 30px;
        top: 60px;
        width: 3px;
        height: calc(100% + 30px);
        background: linear-gradient(180deg, #ffc107 0%, #ff9800 100%);
        z-index: 0;
    }
    
    .stage:last-child::before {
        display: none;
    }
    
    .stage-number {
        flex-shrink: 0;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        font-weight: 700;
        box-shadow: 0 4px 20px rgba(255, 152, 0, 0.4);
        position: relative;
        z-index: 1;
        transition: all 0.3s ease;
    }
    
    .stage:hover .stage-number {
        transform: scale(1.1);
        box-shadow: 0 6px 30px rgba(255, 152, 0, 0.6);
    }
    
    .stage-content {
        flex: 1;
        background: #ffffff;
        padding: 25px 30px;
        border-radius: 15px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        border-left: 4px solid #ffc107;
        transition: all 0.3s ease;
    }
    
    .stage:hover .stage-content {
        transform: translateX(10px);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.12);
    }
    
    .stage-content h4 {
        font-size: 1.3rem;
        color: #1a3a5c;
        margin-bottom: 10px;
        font-weight: 700;
    }
    
    .stage-content p {
        color: #6e6e73;
        font-size: 1rem;
        line-height: 1.6;
        margin: 0;
    }
    
    @@media (max-width: 768px) {
        .stage {
            gap: 20px;
        }
        
        .stage-number {
            width: 50px;
            height: 50px;
            font-size: 1.25rem;
        }
        
        .stage::before {
            left: 24px;
        }
        
        .stage-content {
            padding: 20px;
        }
        
        .stage-content h4 {
            font-size: 1.1rem;
        }
        
        .stage-content p {
            font-size: 0.95rem;
        }
    }
</style>
